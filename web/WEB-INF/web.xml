<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>Web.NewServletListener</listener-class>
    </listener>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>Web.NewServletListener1</listener-class>
    </listener>
    <servlet>
        <servlet-name>añadirLibServlet</servlet-name>
        <servlet-class>Controlador.añadirLibServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>añadirEditServlet</servlet-name>
        <servlet-class>Controlador.añadirEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>añadirLibServlet</servlet-name>
        <url-pattern>/addLib.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>añadirEditServlet</servlet-name>
        <url-pattern>/addEdit.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
